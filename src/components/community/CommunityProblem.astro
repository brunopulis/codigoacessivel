---
import { X } from "@lucide/astro";

const problems = [
  "passam em auditorias automatizadas",
  "seguem guidelines no papel",
  "e ainda assim excluem pessoas reais",
];
---

<section class="px-6 py-20 lg:py-32 bg-card">
  <div class="max-w-4xl mx-auto">
  <h2 class="text-2xl md:text-4xl font-bold text-center mb-6">
    A web está cheia de projetos que:
      </h2>
      
      <div class="space-y-4 mb-12 max-w-xl mx-auto">
        {problems.map((problem, index) => (
          <div 
            class="flex items-center gap-4 p-4 rounded-lg bg-secondary/30 border border-border"
          >
            <X class="w-5 h-5 text-destructive shrink-0" aria-hidden="true" />
            <p class="text-lg text-foreground">{problem}</p>
          </div>
        ))}
      </div>
      
      <div class="text-center">
        <p class="text-2xl md:text-3xl font-bold text-foreground mb-4">
          Isso não é acessibilidade.
        </p>
        <p class="text-2xl md:text-3xl font-bold text-primary">
          Isso é <span class="underline decoration-primary/50">conformidade vazia</span>.
        </p>
      </div>
    </div>
</section>

