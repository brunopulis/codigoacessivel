---
import { Check, X } from "@lucide/astro";

const forYou = [
  "Trabalha com front-end, QA ou design;",
  "Já tentou aprender acessibilidade e ficou perdido;",
  "Quer entender por que algo funciona (ou não);",
  "Se incomoda em entregar algo que exclui pessoas.",
];

const notForYou = [
  "Quer apenas um selo de acessibilidade;",
  "Procura checklist rápido para cumprir requisito;",
  "Não está disposto a rever decisões técnicas;",
  "Acha que acessibilidade não é sua responsabilidade.",
];
---

<section class="px-6 py-20 lg:py-32 bg-card">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-2xl md:text-4xl font-bold text-center mb-12">
      Para quem é (e para quem não é)
    </h2>
    <div class="grid md:grid-cols-2 gap-8">
      <div class="p-6 rounded-xl bg-background border border-primary/30">
        <h3 class="text-xl font-bold mb-6 flex items-center gap-2">
          É para você se:
        </h3>

        <ul class="space-y-4">
          {
            forYou.map((item) => (
              <li class="flex items-start gap-3">
                <Check class="w-6 h-6 text-primary shrink-0 mt-0.5" />
                <p class="text-white">{item}</p>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="p-6 rounded-xl bg-background border border-destructive/30">
        <h3 class="text-xl font-bold mb-6 flex items-center gap-2">
          Não é para você se:
        </h3>

        <ul class="space-y-4">
          {
            notForYou.map((item) => (
              <li class="flex items-start gap-3">
                <X class="w-6 h-6 text-destructive shrink-0 mt-0.5" />
                <p class="text-muted-foreground">{item}</p>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
